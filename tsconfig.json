{
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"outDir": "dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "es6"

	},
	"allowTsInNodeModules": true,
	"lib": [
		"es2022"
	],
	"include": [
		"src/**/*"
	]
}